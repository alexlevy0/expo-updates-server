# Server
PORT=3000
API_KEY=your-secure-api-key-here
NODE_ENV=production
BASE_URL=https://updates.example.com

# Paths (absolute paths recommended in production)
# In dev, these can be relative to project root
DATA_DIR=data
KEYS_DIR=keys

# Security
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
DASHBOARD_AUTH_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme

# Optional
LOG_LEVEL=info
TRUST_PROXY=true
