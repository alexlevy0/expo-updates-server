{
  "name": "expo-updates-server",
  "version": "1.0.0",
  "description": "Self-hosted Expo Updates server compatible with Expo Protocol v1",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "echo 'Bun runs TS natively, but building for production...' && bun build --target=bun --outdir=dist src/server.ts && cp -r dashboard dist/",
    "start": "bun dist/server.js",
    "db:init": "bun scripts/init-db.ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun scripts/migrate.ts",
    "gc": "bun scripts/gc-assets.ts",
    "backup": "bun scripts/backup.ts",
    "keys:generate": "bun scripts/generate-keys.ts",
    "keys:info": "bun scripts/generate-keys.ts --info",
    "release:create": "bun scripts/create-release.ts",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist/ data/ keys/"
  },
  "keywords": [
    "expo",
    "updates",
    "server",
    "self-hosted",
    "react-native"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "multer": "1.4.5-lts.1",
    "node-forge": "^1.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/bun": "^1.3.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.2.1",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@types/node-forge": "^1.3.11",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.8",
    "supertest": "^7.2.2",
    "tsx": "^4.7.2",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18"
  }
}
