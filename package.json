{
  "name": "expo-updates-server",
  "version": "1.0.0",
  "description": "Self-hosted Expo Updates server compatible with Expo Protocol v1",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "test": "bun test",
    "db:init": "bun scripts/init-db.ts",
    "db:migrate": "bun scripts/migrate.ts",
    "keys:generate": "bun scripts/generate-keys.ts",
    "release:create": "bun scripts/create-release.ts",
    "release:export": "bun scripts/export-releases.ts",
    "release:purge": "bun scripts/purge-old-releases.ts",
    "assets:gc": "bun scripts/gc-assets.ts",
    "backup": "bun scripts/backup.ts"
  },
  "keywords": [
    "expo",
    "updates",
    "server",
    "self-hosted",
    "react-native"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "multer": "2.0.2",
    "node-forge": "^1.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/bun": "^1.3.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/form-data": "^2.2.1",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@types/node-forge": "^1.3.11",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.8",
    "supertest": "^7.2.2",
    "tsx": "^4.7.2",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18"
  }
}
